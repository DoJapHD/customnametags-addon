/* ----- Accounts ----- */

.name-tag-container {
  width: 100%;
  height: 100%;
  left: 0;
  top: 32;
  bottom: 32;
  renderer: "DirtBackground";
  priority-layer: back;
}

.name-tag-list {
  left: 0;
  top: 0;
  height: fit-content;
  space-between-entries: 2;
}

Scroll {
  width: 185;
  top: 0;
  bottom: 0;
  margin-top: 5;
  margin-bottom: 5;
  left: 50%;
  alignment-x: center;
}

Scrollbar {
  left: 0;
  top: 0;
  width: 5;
  height: 100%;
  margin-left: 5;
}

.name-tag-list NameTag {
  width: 100%;
  height: 24;
}

NameTag {

.avatar {
  left: 2;
  top: 2;
  width: 16;
  height: width;
  clickable: true;
}

.name {
  left: 20;
  top: 2;
}

.customName {
  left: 20;
  top: 14;
}

}

.name-tag-button-menu {
  width: 300;
  height: 20;
  left: 50%;
  alignment-x: center;
  bottom: 5;
  layout: fill;
  priority-layer: very_front;
  space-between-entries: 8;
}

/* List extension */
.foreground-top {
  height: 32;
}

.foreground-bottom {
  height: 32;
}

.button-menu {
  left: 0;
  top: 0;
  width: 100%;
  height: 20;
  layout: fill;
  space-between-entries: 5;
}

TextField {
  left: 0;
  top: 0;
  width: 100%;
  height: 20;
  margin-bottom: 5;
  margin-top: 2;
}
