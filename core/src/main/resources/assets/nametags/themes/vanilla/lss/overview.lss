/* ----- Accounts ----- */

.name-tag-container {
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  bottom: 32;
}

.name-tag-list {
  left: 0;
  top: 0;
  height: fit-content;
  space-between-entries: 2;
  selectable: false;
}

Scroll {
  width: 90%;
  top: 0;
  bottom: 0;
  margin-top: 5;
  margin-bottom: 5;
  left: 50%;
  alignment-x: center;
}

Scrollbar {
  left: 0;
  top: 0;
  width: 5;
  height: 100%;
  margin-left: 5;
}

.name-tag-list NameTag {
  width: 100%;
  height: 24;
}

.name-tag-selected {
  height: 150;
  border: 1 gray;
}

NameTag {
  .avatar {
    left: 2;
    top: 2;
    width: 16;
    height: width;
    clickable: true;
  }

  .name {
    left: 20;
    top: 2;
  }

  .custom-name {
    left: 20;
    top: 14;
  }

  .input-list {
    left: 0;
    top: 30;
    width: 100%;
    bottom: 0;
  }

  .label-name {
    margin-left: 5;
  }

  .name-text-field {
    top: 0;
    left: 0;
    height: 20;
    width: 90%;
    margin: 2 5 5 5;
  }
}